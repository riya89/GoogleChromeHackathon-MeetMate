{
  "name": "MeetMate - AI Meeting Assistant",
  "version": "0.3",
  "manifest_version": 3,
  "description": "AI-powered meeting assistant that captures captions and generates summaries using Gemini Nano.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel","tabs", "activeTab", "scripting", "notifications","storage"],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://meet.google.com/*", "<all_urls>"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "MeetMate - AI Meeting Assistant"
  }
}

