{
  "name": "Chrome Prompt AI Demo",
  "version": "0.2",
  "manifest_version": 3,
  "description": "Try Chrome's built-in prompt API built with Gemini Nano.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel","tabs", "activeTab", "scripting", "notifications","storage"],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "host_permissions": ["https://meet.google.com/*", "<all_urls>"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Chat Interface"
  }
}

